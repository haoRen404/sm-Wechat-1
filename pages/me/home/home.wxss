/* pages/me/home/home.wxss */

@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

/* 头像部分的样式 */
.UCenter-bg {
  background-image: url(https://hbimg.huabanimg.com/5e10f71579ce12768e9f7d90717fb9a0b76246072289a-RPp1Go_fw658/format/webp);/*背景图*/
  background-size: cover;
  height: 450rpx; /*背景的高度*/
  display: flex;
  justify-content: center;
  padding-top: 40rpx;
  overflow: hidden;
  position: relative;
  flex-direction: column;
  align-items: center;
  color: #fff;
  font-weight: 300;
  text-shadow: 0 0 3px rgba(0, 0, 0, 0.3);
}

.UCenter-bg text {
  opacity: 0.8;
}

.UCenter-bg image {
  width: 200rpx;
  height: 200rpx;
}

.UCenter-bg .gif-wave{
  position: absolute;
  width: 100%;
  bottom: 0;
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  left: 0;
  z-index: 99;
  mix-blend-mode: screen;  
  height: 100rpx;   
}

map,.mapBox{
  width: 750rpx;
  height: 300rpx;
}